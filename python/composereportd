def job(period):
    now=datetime.datetime.now()
    print(f"I am {period} at {now}")
    now=datetime.datetime.now(datetime.UTC)
    newminute = now.minute - (now.minute % (period//60))
    endtime=(now.replace(minute=newminute,second=0,microsecond=0))

    if (period >= 60*60):
        newhour = now.hour - (now.hour % (period//(60*60)))
        endtime=(endtime.replace(hour=newhour,minute=0,second=0,microsecond=0))

    starttime=endtime-datetime.timedelta(seconds=period)
    print(f"start time {starttime}; end time {endtime}")
    #time.sleep(900)
    print(f"I am {period} at {now} terminated")

